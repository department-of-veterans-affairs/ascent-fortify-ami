{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "us-gov-west-1"
  },

  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "source_ami_filter": { "filters": { "name": "ascent-base-*" }, "most_recent": true },
      "subnet_id": "subnet-025d7a67",
      "security_group_id": "sg-505ca734",
      "instance_type": "t2.micro",
      "iam_instance_profile": "read_fortify_bucket",
      "ssh_username": "ec2-user",
      "ssh_pty": true,
      "ami_name": "ascent-fortify {{timestamp}}",
      "tags": {
        "name": "ascent-fortify"
      },
      "snapshot_tags": {
        "name": "ascent-fortify"
      }
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "setenv.sh",
      "destination": "~/setenv.sh"
    },
    {
      "type": "file",
      "source": "create-ssc-db.sql",
      "destination": "~/create-ssc-db.sql"
    },
    {
      "type": "file",
      "source": "wait_for_tomcat_up.sh",
      "destination": "~/wait_for_tomcat_up.sh"
    },
    {
      "type": "file",
      "source": "setupFortify.js",
      "destination": "~/setupFortify.js"
    },
    {
      "type": "file",
      "source": "run-fortify-ssc.sh",
      "destination": "~/run-fortify-ssc.sh"
    },
    {
      "type": "file",
      "source": "fortify-sca.options",
      "destination": "/home/ec2-user/fortify-sca.options"
    },
    {
      "type": "file",
      "source": "run-sca-jenkins-node.sh",
      "destination": "~/run-sca-jenkins-node.sh"
    },
    {
      "type": "shell",
      "scripts": [
        "install-tools.sh",
        "install-java.sh",
        "install-tomcat.sh",
        "install-fortify.sh",
        "download-phantomjs.sh"
      ]
    }
  ]
}
